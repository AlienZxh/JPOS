<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="mAddViewModel"
            type="com.j1j2.jposmvvm.features.viewmodel.AddSupplierViewModel" />
    </data>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/size_20px"
        android:paddingRight="@dimen/size_20px"
        android:paddingTop="@dimen/size_40px">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_80px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_80px"
                android:gravity="center_vertical"
                android:text="供货单位："
                android:textColor="@color/color333333"
                android:textSize="@dimen/text_28px" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="@dimen/size_80px"
                android:layout_weight="1"
                android:background="@drawable/item_picture_conner_bg"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="请输入单位名称"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="@dimen/size_20px"
                android:text="@={mAddViewModel.name}"
                android:textColor="@color/color333333"
                android:textColorHint="@color/coloraaaaaa"
                android:textSize="@dimen/text_28px" />

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_80px"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/size_20px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_80px"
                android:gravity="center_vertical"
                android:text="　联系人："
                android:textColor="@color/color333333"
                android:textSize="@dimen/text_28px" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="@dimen/size_80px"
                android:layout_weight="1"
                android:background="@drawable/item_picture_conner_bg"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="请输入联系人"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="@dimen/size_20px"
                android:text="@={mAddViewModel.contacter}"
                android:textColor="@color/color333333"
                android:textColorHint="@color/coloraaaaaa"
                android:textSize="@dimen/text_28px" />

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_80px"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/size_20px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_80px"
                android:gravity="center_vertical"
                android:text="联系电话："
                android:textColor="@color/color333333"
                android:textSize="@dimen/text_28px" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="@dimen/size_80px"
                android:layout_weight="1"
                android:background="@drawable/item_picture_conner_bg"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="请输入联系电话"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLines="1"
                android:paddingLeft="@dimen/size_20px"
                android:text="@={mAddViewModel.contact}"
                android:textColor="@color/color333333"
                android:textColorHint="@color/coloraaaaaa"
                android:textSize="@dimen/text_28px" />

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_80px"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/size_20px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_80px"
                android:gravity="center_vertical"
                android:text="　　备注："
                android:textColor="@color/color333333"
                android:textSize="@dimen/text_28px" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="@dimen/size_80px"
                android:layout_weight="1"
                android:background="@drawable/item_picture_conner_bg"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="请输入备注"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="@dimen/size_20px"
                android:text="@={mAddViewModel.remark}"
                android:textColor="@color/color333333"
                android:textColorHint="@color/coloraaaaaa"
                android:textSize="@dimen/text_28px" />

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>
</layout>