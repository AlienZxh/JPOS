<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="actionbar_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_actionbar</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="actionbar_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_32px</item>
        <item name="android:maxLength">12</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="actionbar_icon_btn_style">
        <item name="android:layout_width">@dimen/size_actionbar</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/actionbar_btn_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_48px</item>
    </style>

    <style name="actionbar_text_btn_style">
        <item name="android:layout_width">@dimen/size_130px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/actionbar_btn_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_28px</item>
    </style>

    <style name="edit_login_layout_style">
        <item name="android:layout_width">@dimen/size_480px</item>
        <item name="android:layout_height">@dimen/size_60px</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="edit_login_ic_style">
        <item name="fontPath">iconfont/iconfont.ttf</item>
        <item name="android:layout_width">@dimen/size_60px</item>
        <item name="android:layout_height">@dimen/size_60px</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/size_20px</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_48px</item>
    </style>

    <style name="edit_login_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">@dimen/size_20px</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@drawable/edit_normal_cursor</item>
        <item name="android:maxLength">15</item>
    </style>

    <style name="edit_login_bottom_line_style">
        <item name="android:layout_width">@dimen/size_480px</item>
        <item name="android:layout_height">@dimen/size_10px</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/login_edit_bottom_line</item>
    </style>


</resources>
